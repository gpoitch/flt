{
  "name": "flt",
  "version": "0.3.0",
  "description": "Format, Lint, Test",
  "author": "Garth Poitras <garth22@gmail.com>",
  "license": "MIT",
  "main": "src/index.js",
  "bin": "src/bin.js",
  "keywords": [
    "format",
    "lint",
    "test"
  ],
  "scripts": {
    "test": "prettier 'src/**/*.js' --config src/configs/.prettierrc.js --write && eslint 'src/**/*.js' --config src/configs/.eslintrc.js --fix",
    "test-flt-all": "flt",
    "test-flt-single": "flt format",
    "test-flt-args": "flt format test/*.js --single-quote"
  },
  "dependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "mocha": "^5.1.1",
    "prettier": "^1.12.1",
    "yargs": "^11.0.0"
  }
}
