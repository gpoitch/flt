{
  "name": "flt",
  "version": "0.22.0",
  "description": "Format, Lint, Test",
  "author": "Garth Poitras <garth22@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/gpoitch/flt.git",
  "main": "src/index.js",
  "bin": "src/bin.js",
  "files": [
    "src"
  ],
  "keywords": [
    "format",
    "lint",
    "test"
  ],
  "scripts": {
    "test": "prettier '{src/**/*.{js,ts},README.md}' --config src/configs/.prettierrc.js --write && DEBUG=eslint:cli-engine eslint 'src/**/*.{js,ts}' --config src/configs/.eslintrc.js --fix",
    "test-flt-all": "./src/bin.js",
    "test-flt-single": "./src/bin.js format",
    "test-flt-args": "./src/bin.js format test/*.js --single-quote"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chalk": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "mocha": "^7.1.1",
    "prettier": "^2.0.1",
    "yargs": "^15.3.1"
  },
  "optionalDependencies": {
    "typescript": "*",
    "react": "*"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "trailingComma": "none"
  }
}
