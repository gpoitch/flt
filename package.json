{
  "name": "flt",
  "version": "0.13.0",
  "description": "Format, Lint, Test",
  "author": "Garth Poitras <garth22@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/gpoitch/flt.git",
  "main": "src/index.js",
  "bin": "src/bin.js",
  "files": [
    "src"
  ],
  "keywords": [
    "format",
    "lint",
    "test"
  ],
  "scripts": {
    "test": "prettier '{src/**/*.{js,ts},README.md}' --config src/configs/.prettierrc.js --write && DEBUG=eslint:cli-engine eslint 'src/**/*.{js,ts}' --config src/configs/.eslintrc.js --fix",
    "test-flt-all": "./src/bin.js",
    "test-flt-single": "./src/bin.js format",
    "test-flt-args": "./src/bin.js format test/*.js --single-quote"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "chalk": "^2.4.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-import": "^2.17.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^6.1.3",
    "prettier": "^1.17.0",
    "yargs": "^13.2.2"
  },
  "optionalDependencies": {
    "typescript": "*",
    "react": "*"
  }
}
