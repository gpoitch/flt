{
  "name": "flt",
  "version": "0.18.0",
  "description": "Format, Lint, Test",
  "author": "Garth Poitras <garth22@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/gpoitch/flt.git",
  "main": "src/index.js",
  "bin": "src/bin.js",
  "files": [
    "src"
  ],
  "keywords": [
    "format",
    "lint",
    "test"
  ],
  "scripts": {
    "test": "prettier '{src/**/*.{js,ts},README.md}' --config src/configs/.prettierrc.js --write && DEBUG=eslint:cli-engine eslint 'src/**/*.{js,ts}' --config src/configs/.eslintrc.js --fix",
    "test-flt-all": "./src/bin.js",
    "test-flt-single": "./src/bin.js format",
    "test-flt-args": "./src/bin.js format test/*.js --single-quote"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "chalk": "^2.4.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "yargs": "^14.2.0"
  },
  "optionalDependencies": {
    "typescript": "*",
    "react": "*"
  }
}
