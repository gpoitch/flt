{
  "name": "flt",
  "version": "0.29.0",
  "description": "Format, Lint, Test",
  "author": "Garth Poitras <garth22@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/gpoitch/flt.git",
  "main": "src/index.js",
  "bin": "src/bin.js",
  "files": [
    "src",
    "config"
  ],
  "keywords": [
    "format",
    "lint",
    "test"
  ],
  "scripts": {
    "test": "prettier '{src/**/*.{js,ts},README.md}' --write && DEBUG=eslint:cli-engine eslint 'src/**/*.{js,ts}' --config config/eslint.config.js --fix",
    "test-flt-all": "./src/bin.js",
    "test-flt-single": "./src/bin.js format",
    "test-flt-args": "./src/bin.js format test/*.js --single-quote"
  },
  "dependencies": {
    "@types/mocha": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "chalk": "^4.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "yargs": "^15.4.1"
  },
  "optionalDependencies": {
    "typescript": "*",
    "react": "*"
  },
  "prettier": "./config/prettier.config.js"
}
